<button type="submit" class="@(IsConfirmButton ? "confirm" : "abort")-button f-16 w-100px @CssClass" @onclick="OnClick" disabled="@IsDisabled">@ChildContent</button>

@code {
    [Parameter] public RenderFragment? ChildContent { get; set; }
    [Parameter] public EventCallback OnClick { get; set; }
    [Parameter] public bool IsDisabled { get; set; }
    [Parameter] public bool IsConfirmButton { get; set; } = true;
    [Parameter] public string? CssClass { get; set; }
}